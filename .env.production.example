# Production Environment Configuration
# Copy this to .env for production deployment

# SECURITY: Generate secure passwords with: openssl rand -base64 32

# JWT Secret (REQUIRED - Must be changed!)
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING

# Database Configuration
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
POSTGRES_PORT=  # Empty = not exposed (recommended with reverse proxy)

# MinIO Object Storage
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
MINIO_API_PORT=  # Empty = not exposed (recommended)
MINIO_CONSOLE_PORT=  # Empty = not exposed (recommended)

# Backend API
BACKEND_PORT=  # Empty = not exposed (recommended with reverse proxy)

# Frontend (must match your domain/reverse proxy)
VITE_API_URL=https://api.yourdomain.com
FRONTEND_PORT=  # Empty = not exposed (recommended with reverse proxy)

# Local Development Configuration
# Uncomment for local development:
# POSTGRES_PORT=5432
# MINIO_API_PORT=9000
# MINIO_CONSOLE_PORT=9001
# BACKEND_PORT=8080
# FRONTEND_PORT=3000
# VITE_API_URL=http://localhost:8080
